{
  "name": "smart-contract-boilerplate",
  "version": "1.0.0",
  "description": "Smart Contract Boilerplate",
  "author": "Ahmad Fahadh Ilyas",
  "license": "MIT",
  "directories": {
    "contracts": "contracts",
    "migrations": "migrations",
    "test": "test"
  },
  "scripts": {
    "lint:contracts": "yarn solium -d contracts",
    "lint:contracts-dry-write": "yarn solium -d contracts --fix-dry-run",
    "lint:contracts-write": "yarn solium -d contracts --fix",
    "lint:js-write": "yarn prettier --write \"test/*.{js,jsx,ts,tsx,json,css}\" \"migrations/*.{js,jsx,ts,tsx,json,css}\"",
    "lint:js": "yarn prettier --check \"test/*.{js,jsx,ts,tsx,json,css}\" \"migrations/*.{js,jsx,ts,tsx,json,css}\"",
    "lint": "yarn run lint:contracts && yarn run lint:js-write && yarn run lint:js",
    "build:contracts": "yarn truffle compile",
    "build": "yarn run build:contracts",
    "clean:contracts": "yarn rimraf build && yarn truffle compile",
    "clean:install": "yarn rimraf node_modules && yarn install",
    "clean": "yarn run clean:contracts && yarn run clean:install",
    "clear:contracts": "yarn rimraf build",
    "clear:install": "yarn rimraf node_modules",
    "clear": "yarn run clear:contracts && yarn run clear:install",
    "test": "yarn truffle test --network test",
    "test:gas-reporter": "yarn run test --reporter eth-gas-reporter",
    "console": "yarn truffle console",
    "console:test": "yarn truffle console --network test",
    "console:kovan": "yarn truffle console --network kovan",
    "console:rinkeby": "yarn truffle console --network rinkeby",
    "console:ropsten": "yarn truffle console --network ropsten",
    "console:mumbai": "yarn truffle console --network mumbai",
    "develop": "yarn truffle develop",
    "deploy": "yarn truffle migrate --reset",
    "deploy:test": "yarn truffle migrate --reset --network test",
    "deploy:kovan": "yarn truffle migrate --reset --network kovan",
    "deploy:rinkeby": "yarn truffle migrate --reset --network rinkeby",
    "deploy:ropsten": "yarn truffle migrate --reset --network ropsten",
    "deploy:mumbai": "yarn truffle migrate --reset --network mumbai"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^4.4.0",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@openzeppelin/truffle-upgrades": "^1.15.0",
    "@truffle/hdwallet-provider": "^2.0.3",
    "env-cmd": "^10.1.0",
    "eth-gas-reporter": "^0.2.24",
    "ethlint": "^1.2.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "truffle": "^5.4.29",
    "truffle-flattener": "^1.6.0"
  },
  "dependencies": {
    "bn.js": "^5.2.0",
    "dotenv": "^11.0.0",
    "ethers": "^5.5.3"
  }
}
